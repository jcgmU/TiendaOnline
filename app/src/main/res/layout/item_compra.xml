<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fecha de la Compra -->
        <TextView
            android:id="@+id/fechaCompraTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: 01/01/2024"
            android:textSize="14sp"
            android:textColor="#666666" />

        <!-- Detalles del Producto -->
        <TextView
            android:id="@+id/productoCompraTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto: Nombre del Producto"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <!-- Cantidad y Precio Total -->
        <TextView
            android:id="@+id/cantidadPrecioCompraTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: 2 | Total: \$40.00"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
